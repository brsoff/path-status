<section class="fixed">
  <h2>The past
    <select data-target="days">
      <option value="7">7</option>
      <option value="14" selected="selected">14</option>
      <option value="21">21</option>
      <option value="30">30</option>
    </select>
    days:</h2>

  <section class="stats">
     <table>
      <%= partial :stat, collection: stats %>

      <tr>
        <td class="phrase total-label">Total</td>
        <td class="frequency total"><%= render_total_stats_for(stats) %></td>
      </tr>
    </table>
  </section>
</section>
